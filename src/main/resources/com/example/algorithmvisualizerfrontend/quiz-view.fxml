<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.algorithmvisualizerfrontend.controller.QuizController"
      spacing="10" alignment="TOP_CENTER" prefWidth="600" prefHeight="500">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label fx:id="quizTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" prefHeight="400">
        <content>
            <VBox fx:id="quizContainer" spacing="15"/>
        </content>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Done" onAction="#handleDone" defaultButton="true"/>
    </HBox>

</VBox>