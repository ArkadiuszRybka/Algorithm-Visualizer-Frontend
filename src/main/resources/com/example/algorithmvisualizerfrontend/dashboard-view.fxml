<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.algorithmvisualizerfrontend.controller.DashboardController">

    <center>
        <VBox alignment="TOP_LEFT" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 14px;" text="Select your algorithm" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label minWidth="80" text="Algorithms:" />
                <ComboBox fx:id="algorithmComboBox" prefWidth="200" />
                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #2196F3; -fx-background-radius: 50%; -fx-alignment: center; -fx-min-width: 18; -fx-min-height: 18; -fx-max-width: 18; -fx-max-height: 18; -fx-font-size: 12; -fx-cursor: hand;" text="i">
                    <tooltip>
                        <Tooltip fx:id="algorithmTooltip" text="Algorithm description will appear here" />
                    </tooltip>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label minWidth="80" text="Data:" />
                <TextField fx:id="inputField" prefWidth="201.0" />
                <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #2196F3; -fx-background-radius: 50%; -fx-alignment: center; -fx-min-width: 18; -fx-min-height: 18; -fx-max-width: 18; -fx-max-height: 18; -fx-font-size: 12; -fx-cursor: hand;" text="i">
                    <tooltip>
                        <Tooltip text="Enter 8–16 numbers in the range 1–99, separated by commas and spaces."/>
                    </tooltip>
                </Label>
                <Button fx:id="expandButton" onAction="#openDataEditor" prefHeight="20" prefWidth="20" style="-fx-padding: 0; -fx-background-radius: 3;">
                    <graphic>
                        <Label style="-fx-font-size: 12px;" text="⤢" />
                    </graphic>
                </Button>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="animationButton" text="Start Animation" />
                <Button fx:id="quizButton" onAction="#handleStartQuiz" text="Start Quiz" />
                <Button fx:id="generateButton" onAction="#handleGenerate" text="Generate data" />
            </HBox>

        </VBox>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 14px;" text="Progress" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Quiz Progress:" />
                <StackPane alignment="CENTER">
                    <ProgressBar fx:id="progressBar" prefWidth="150"
                                 style="-fx-accent: #1976D2;"/> <!-- ciut ciemniejszy niebieski -->
                    <Label fx:id="progressText" text="0 / 0" mouseTransparent="true"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.85), 3, 0.2, 0, 0);"/>
                </StackPane>
            </HBox>

            <Label text="Quiz status" />
            <ListView fx:id="quizStatusList" prefHeight="200" prefWidth="250" />
        </VBox>
    </right>

    <bottom>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 12px;" text="Options" />
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />
                <Button fx:id="changePasswordButton" onAction="#handleChangePassword" text="Change Password" />
                <Button fx:id="deleteAccountButton" style="-fx-text-fill: red;" text="Delete Account" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
